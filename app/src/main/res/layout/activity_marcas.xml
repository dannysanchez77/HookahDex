<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/solo_logo"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordesito"
            android:layout_margin="12dp"
            android:outlineSpotShadowColor="@color/azul_oscuro"
            >

        </SearchView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MARCAS DE TABACO"
        android:textSize="24dp"
        android:textColor="@color/naranja"
        android:textStyle="bold"
        android:gravity="center
"
        ></TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/marca1"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/hookain"
                        android:layout_gravity="center"
                        android:padding="25dp"
                        android:layout_margin="6dp"
                        android:id="@+id/imagenMarca1"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </Space>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MARCA1"
                        android:textColor="@color/naranja"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/textMarca1">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/marca3"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/logo_holster"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:padding="25dp"
                        android:layout_margin="6dp"

                        android:id="@+id/imagenMarca3"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </Space>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MARCA3"
                        android:textColor="@color/naranja"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/textMarca3">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/marca5"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/logo"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:padding="25dp"
                        android:layout_margin="6dp"

                        android:id="@+id/imagenMarca5"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </Space>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MARCA5"
                        android:textColor="@color/naranja"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/textMarca5">
                    </TextView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/marca2"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/dozaj"
                        android:layout_gravity="center"

                        android:padding="25dp"
                        android:layout_margin="6dp"
                        android:id="@+id/imagenMarca2"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </Space>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MARCA2"
                        android:textColor="@color/naranja"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/textMarca2">
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/marca4"
                    >
                    <ImageView
                        android:id="@+id/imagenMarca4"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:padding="25dp"
                        android:layout_margin="6dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/mrshisha" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </Space>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MARCA4"
                        android:textColor="@color/naranja"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/textMarca4">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/marca6"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/logo"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:padding="25dp"
                        android:layout_margin="6dp"

                        android:id="@+id/imagenMarca6"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </Space>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MARCA6"
                        android:textColor="@color/naranja"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/textMarca6">
                    </TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/pieHome"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/hogar"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp">

            </Space>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Home"
                android:textColor="@color/naranja"
                android:textSize="14sp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/pieMarcas"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/cachimba"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp">

            </Space>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Marcas"
                android:textColor="@color/naranja"
                android:textSize="14sp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/pieIngredientes"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/ingredientes"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp">

            </Space>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Ingredientes"
                android:textColor="@color/naranja"
                android:textSize="14sp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/pieGusto"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/dulce"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp">

            </Space>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/gusto"
                android:textColor="@color/naranja"
                android:textSize="14sp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/pieUsuario"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/hombre"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp">

            </Space>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/usuario"
                android:textColor="@color/naranja"
                android:textSize="14sp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
